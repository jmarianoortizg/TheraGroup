@model GrupoThera.Entities.Entity.OS.OrdenServicio
@{
    ViewBag.Title = "OrdenTrabajoPreliminarWelfare";
    Layout = null;
    var idCotizacion = "";
    idCotizacion = Model.ordenServicioId.ToString();
   
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>Invoice</title>
    <style type="text/css">
        .clearfix:after {
            content: "";
            display: table;
            clear: both;
        }

        a {
            color: #5D6975;
            text-decoration: underline;
        }

        body {
            position: relative;
            padding: 40px;
            color: #001028;
            background: #FFFFFF;
            font-family: Verdana, sans-serif;
            font-size: 12px;
            font-family: Arial;
        }

        header {
            padding: 10px 0;
            margin-bottom: 30px;
        }

        #logo {
            text-align: center;
            margin-bottom: 10px;
        }

            #logo img {
                width: 90px;
            }

        h1 {
            border-top: 1px solid #5D6975;
            border-bottom: 1px solid #5D6975;
            color: #5D6975;
            font-size: 2.4em;
            line-height: 1.4em;
            font-weight: normal;
            text-align: center;
            margin: 0 0 20px 0;
            background: url(dimension.png);
        }

        #project {
            float: left;
        }

            #project span {
                color: #5D6975;
                text-align: right;
                width: 65px;
                margin-right: 10px;
                display: inline-block;
                font-size: 0.8em;
            }

        #company {
            float: right;
            text-align: right;
        }

            #project div,
            #company div {
                white-space: nowrap;
            }


        #notices .notice {
            color: #5D6975;
            font-size: 1.2em;
        }

        footer {
            color: #5D6975;
            width: 100%;
            height: 30px;
            position: absolute;
            bottom: 0;
            border-top: 1px solid #C1CED9;
            padding: 8px 0;
            text-align: center;
        }

        /* table */

        table {
            font-size: 75%;
            table-layout: fixed;
            width: 100%;
        }

        table {
            border-collapse: separate;
            border-spacing: 2px;
        }

        th, td {
            border-width: 1px;
            padding: 0.5em;
            position: relative;
            text-align: left;
        }

        th, td {
            border-radius: 0.25em;
            border-style: solid;
        }

        th {
            background: #EEE;
            border-color: #BBB;
        }

        td {
            border-color: #DDD;
        }

        table.meta, table.balance {
            float: right;
            width: 36%;
        }

            table.meta:after, table.balance:after {
                clear: both;
                content: "";
                display: table;
            }

            /* table meta */

            table.meta th {
                width: 40%;
            }

            table.meta td {
                width: 60%;
            }

        /* table items */

        table.inventory {
            clear: both;
            width: 100%;
        }

            table.inventory th {
                font-weight: bold;
                text-align: center;
            }

            table.inventory td:nth-child(1) {
                width: 26%;
            }

            table.inventory td:nth-child(2) {
                width: 38%;
            }

            table.inventory td:nth-child(3) {
                text-align: right;
                width: 12%;
            }

            table.inventory td:nth-child(4) {
                text-align: right;
                width: 12%;
            }

            table.inventory td:nth-child(5) {
                text-align: right;
                width: 12%;
            }

        /* table balance */

        table.balance th, table.balance td {
            width: 50%;
        }

        table.balance td {
            text-align: right;
        }

        #printfooter {
            position: absolute;
            bottom: 0;
            right: 0;
            padding: 1rem;
        }

        @@page:last {
            @@bottom-center {
                content: "…";
            }
        }

        #fontsizeth {
            font-size: 1.2em;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header class="clearfix">
        <div id="logo">

        </div>
        <h1>Orden Trabajo Servicio #@idCotizacion</h1>
        <div id="company" class="clearfix">
            <div><strong>Fecha Emision</strong> : @Model.confEmision</div>
            <div><strong>Fecha Vigencia</strong> : @Model.confVigencia</div>
            <div><strong>Clave</strong> : @Model.confClave </div>
            <div><strong>Documento</strong> : @Model.confTipoDoc</div>
            <div><strong>Asesor</strong> : @Model.owner</div>
            <div><strong>Estado</strong> : @Model.StatusOrdenServicio.descripcion.ToUpper()</div>
            <div><strong>Impresion</strong> : @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</div>
        </div>

        <div id="project">
            <div><span>Cliente</span> @Model.Cliente.razonSocial</div>
            <div><span>Dirección</span> @Model.Cliente.direccion </div>
            <div><span>Lugar Servicio</span> @Model.Cliente.dirServicio </div>
            <div><span>Dir Empresa</span> @Model.Empresa.direccion</div>
            <div><span>Email</span> @Model.Empresa.email</div>
            <div><span>Telefono</span> @Model.Empresa.telefono</div>
            <div><span>Contacto</span> @Model.Empresa.contacto</div>
        </div>
    </header>
    <main>
        <table class="meta" style="padding-top:30px; width:100%; font-size:12px;">
            <thead class="fontsizeth">
                <tr style="visibility:hidden">
                    <th style="width:100%"><span>  Header Hidden</span></th>
                </tr>
            </thead>
            <tr>
                <td style="border-color:white">
                    <table class="meta">
                        <tr>
                            <th class="fontsizeth"><span>Orden Trabajo Servicio #</span></th>
                            <td><span>@idCotizacion</span></td>
                        </tr>
                        <tr>
                            <th class="fontsizeth"><span>Entrada</span></th>
                            <td><span>@Model.fechaEntrega.ToString("dd/MM/yyyy")</span></td>
                        </tr>
                        <tr>
                            <th class="fontsizeth"><span>Muestreo</span></th>
                            <td><span>@Model.fechaMuestreo.ToString("dd/MM/yyyy")</span></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td style="border-color:white">
                    <table class="inventory">
                        <thead class="fontsizeth">
                            <tr>
                                <th style="width:7%"><span>  Cantidad</span></th>
                                <th style="width:7%"><span>  Clave</span></th>
                                <th style="width:50%"><span> Descripcion | Servicio Producto </span></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OSPrePartidas)
                            {
                                <tr>
                                    <td style="text-align:center"><span>@item.cantidad</span></td>
                                    <td style="text-align:center"><span>@item.Servicio.clave</span></td>
                                    <td style="text-align:center"><span>@item.Servicio.descripcion </span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td style="border-color:white">
                    <div id="notices">
                        <div><h1>Observaciones Laboratorio</h1></div>
                        <div class="notice">

                            @if (Model.check1)
                            {
                                <input type='checkbox' checked><span> PARA EL SERVICIO SOLICITADO, ESTE TIENE EL METODO DE PRUEBA SELECCIONADO Y ADECUADO AL ESTUDIO</span><br>;
                            }
                            else
                            {
                                <input type='checkbox'><span> PARA EL SERVICIO SOLICITADO, ESTE TIENE EL METODO DE PRUEBA SELECCIONADO Y ADECUADO AL ESTUDIO</span><br>;
                            }

                            @if (Model.check2)
                            {
                                <input type='checkbox' checked><span>CAPACIDAD INSTALADA DEL EQUIPO PARA CUBRIR EL TRABAJO</span><br>
                            }
                            else
                            {
                                <input type='checkbox'><span>CAPACIDAD INSTALADA DEL EQUIPO PARA CUBRIR EL TRABAJO</span><br>
                            }

                            @if (Model.check3)
                            {
                                <input type='checkbox' checked><span>SE TIENE EL PERSONAL SUFICIENTE Y CAPACITADO PARA DAR EL SERVICIO</span><br>
                            }
                            else
                            {
                                <input type='checkbox'><span>SE TIENE EL PERSONAL SUFICIENTE Y CAPACITADO PARA DAR EL SERVICIO</span><br>    }

                            @if (Model.check4)
                            {
                                <input type='checkbox' checked><span>TIEMPO DE ENTREGA SOLICITADO SUFICIENTE PARA REALIZAR LAS PRUEBAS</span><br>
                            }
                            else
                            {
                                <input type='checkbox'><span>TIEMPO DE ENTREGA SOLICITADO SUFICIENTE PARA REALIZAR LAS PRUEBAS</span><br>
                            }
                        </div>

                    </div>
                </td>
            </tr>
            <tr>
                <td style="border-color:white">
                    <div id="notices">
                        <div><h1>Notas Especiales</h1></div>
                        <div class="notice">
                            FAVOR DE ACORDAR FECHA DE MUESTREO LO MAS PRONTO POSIBLE EN JULIO CON EL ING. MANUEL GUZMAN. GRACIAS <br />
                            NO OLVIDAR EQUIPO DE SEGURIDAD COMPLETO, COMPROBANTE IMSS Y SOLICITAR LA FIRMA DE CONFORMIDAD DEL USUARIO<br />
                            LO ANTERIOR, ES BAJO ESTRICTO CUMPLIMIENTO DE LA NORMA, EN CASE DE SOLICITUDES DEL CLIENTE, HAREMOS LA ACLARACIÓN CORRESPONDIENTE SI EN CAMPO NOTASEN DIFERENCIA ENTRE LO SOLICITADO Y LO QUE DEBE SER REALIZADO, FAVOR DE COMUNICARLO AL ÁREA DE VENTAS PARA HACER ACLARACIONES O CAMBIOS CON EL CLIENTE. MUCHAS GRACIAS<br />
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </main>
</body>
</html>
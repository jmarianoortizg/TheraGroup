@model GrupoThera.Entities.Models.Catalog.CatalogModel
@{
    ViewBag.Title = "ServicioView";
    var allItems = Model.AllServicio.Count;
}

<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                Catalogo Servicio <small>Creacion / Edicion / Eliminacion</small>
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content">
    <div class="block">
        <ul class="nav nav-tabs" data-toggle="tabs">
            <li class="active">
                <a href="#catalog-new">Nuevo</a>
            </li>
            <li>
                <a href="#catalog-list">Listado</a>
            </li>
            <li>
                <a href="#catalog-edit">Edicion</a>
            </li>
        </ul>
        <div class="block-content tab-content bg-white">
            <!-- Nuevo -->
            <div class="tab-pane fade fade-up in active" id="catalog-new">
                <!-- New Item -->
                @using (Html.BeginForm("CreateServicio", "Catalog", FormMethod.Post, new { id = "formCreateServicio", enctype = "multipart/form-data", @class = "form-horizontal row-border grid-form", onsubmit = "return validateCreateServicio()" }))
                {
                    <fieldset>
                        <legend>Creacion Nuevo Item</legend>
                        <div data-row-span="3">
                            <div data-field-span="1">
                                <label>Clave</label>
                                @Html.TextBoxFor(model => model.Servicio.clave, new { id = "clave", name = "clave", @class = "form-control required", type = "text" })
                            </div>
                            <div data-field-span="2">
                                <label>Descripcion</label>
                                @Html.TextBoxFor(model => model.Servicio.descripcion, new { id = "descripcion", name = "descripcion", @class = "form-control required", type = "text" })
                            </div>
                        </div>
                        <div data-row-span="3">
                            <div data-field-span="1">
                            </div>
                            <div data-field-span="2">
                                <label>Descripcion2</label>
                                @Html.TextBoxFor(model => model.Servicio.descripcion2, new { id = "descripcion2", name = "descripcion2", @class = "form-control required", type = "text" })
                            </div>
                        </div>
                        <div data-row-span="5">
                            <div data-field-span="1">
                                <label>Area Servicio</label>
                                @Html.DropDownListFor(model => model.Servicio.areaServicioId, Model.listAreaServicio, new { @class = "form-control required" })
                            </div>
                            <div data-field-span="1">
                                <label>Clasificacion Servicio</label>
                                @Html.DropDownListFor(model => model.Servicio.clasificacionServicioId, Model.listClasificacionServicio, new { @class = "form-control required" })
                            </div>
                            <div data-field-span="1">
                                <label>Frecuencia Servicio</label>
                                @Html.DropDownListFor(model => model.Servicio.frecuenciaServicioId, Model.listFrecuenciaServicio, new { @class = "form-control required" })
                            </div>
                            <div data-field-span="1">
                                <label>Provedores</label>
                                @Html.DropDownListFor(model => model.Servicio.provedorId, Model.listProvedor, new { @class = "form-control required" })
                            </div>
                            <div data-field-span="1">
                                <label>Tiempos Entrega</label>
                                @Html.DropDownListFor(model => model.Servicio.tiempoEntregaId, Model.listTiempoEntrega, new { @class = "form-control required" })
                            </div>
                        </div>
                        <div data-row-span="5">
                            <div data-field-span="1">
                                <label>Precio Base</label>
                                @Html.TextBoxFor(model => model.Servicio.precioBase, new { id = "precioBase", name = "clave", @class = "form-control required onlyNumber", type = "text" })
                            </div>
                            <div data-field-span="1">
                                <label>Precio Promedio</label>
                                @Html.TextBoxFor(model => model.Servicio.precioPromedio, new { id = "precioPromedio", name = "descripcion", @class = "form-control required onlyNumber", type = "text" })
                            </div>
                            <div data-field-span="1">
                                <label>Precio Minimo</label>
                                @Html.TextBoxFor(model => model.Servicio.precioMinimo, new { id = "precioMinimo", name = "descripcion", @class = "form-control required onlyNumber", type = "text" })
                            </div>
                        </div>
                        <div data-row-span="5">
                            <div data-field-span="1">
                                <label>Tipo</label>
                                @Html.DropDownListFor(model => model.Servicio.tipo, new List<SelectListItem>
                                {
                                    new SelectListItem{ Text="Producto", Value = "Producto" },
                                    new SelectListItem{ Text="Servicio", Value = "Servicio" }
                                }, new { @class = "form-control" })
                            </div>
                            <div data-field-span="1">
                                <label>Acreditado</label>
                                @Html.DropDownListFor(model => model.Servicio.acreditado, new List<SelectListItem>
                                {
                                    new SelectListItem{ Text="Si", Value = "Y" },
                                    new SelectListItem{ Text="No", Value = "N" }
                                }, new { @class = "form-control" })
                            </div>
                            <div data-field-span="1">
                                <label>SubContrato</label>
                                @Html.DropDownListFor(model => model.Servicio.subcontrato, new List<SelectListItem>
                                {
                                    new SelectListItem{ Text="Si", Value = "Y" },
                                    new SelectListItem{ Text="No", Value = "N" }
                                }, new { @class = "form-control" })
                            </div>
                        </div>
                        <div data-row-span="5">
                            <div data-field-span="3">
                                <label>Comentarios</label>
                                @Html.TextAreaFor(model => model.Servicio.comentarios, new { id = "comentarios  ", name = "comentarios", @class = "form-control required", type = "text" })
                            </div>
                        </div>
                    </fieldset>
                    <br /><br />
                    <div class="clearfix pt-md">
                        <div class="pull-right">
                            <button class="btn-primary btn">Crear Nuevo Servicio</button>
                        </div>
                    </div>
                }
            </div>
            <!-- END Nuevo -->
            <!-- Listado -->
            <div class="tab-pane fade fade-up" id="catalog-list">
                <div class="border-b push-30">
                    <h2 class="push-10">@allItems <span class="h5 font-w400 text-muted">Items Encontrados</span></h2>
                </div>
                <table class="table table-striped table-vcenter">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Razon Social</th>
                            <th>RFC</th>
                            <th class="text-center" style="width: 5%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AllServicio)
                        {
                            <tr>
                                <td class="">@Html.DisplayFor(modelItem => item.clave)</td>
                                <td class="">@Html.DisplayFor(modelItem => item.tipo)</td>
                                <td class="">@Html.DisplayFor(modelItem => item.precioBase)</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a id="@Html.DisplayFor(modelItem => item.servicioId)" class="btn btn-xs btn-default clsEditServicio" type="button" title="Edicion"><i class="fa fa-pencil"></i></a>
                                        <a id="@Html.DisplayFor(modelItem => item.servicioId)" class="btn btn-xs btn-default clsDeleteServicio" type="button" title="Eliminar"><i class="fa fa-times"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- END Listado -->
            <!-- Edicion -->
            <div class="tab-pane fade fade-up" id="catalog-edit">
                <div class="col-md-12" id="divEditionServicio">
                    <div class="border-b push-30">
                        <h2 class="push-10"><span class="h5 font-w400 text-muted">Selecciona un item para la edicion</span></h2>
                    </div>
                </div>
            </div>
            <!-- END Edicion -->
        </div>
    </div>
</div>

@section Scripts {

    <script src="@Url.Content("~/Content/plugins/jquery-validation/dist/jquery.js")"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-validation/dist/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-validation/dist/additional-methods.min.js")"></script>

    <script>

        $(document).ready(function () {

            $.notify({ icon: "fa fa-info-circle", message: 'Datos Cargados Correctamente' }, { type: 'info' });

            $('.onlyNumber').keyup(function () {
                this.value = this.value.replace(/[^0-9\.]/g, '');
            });

            $(".clsEditServicio").on('click', function (e) {

                var model = {
                    "idServicioSelected": $(this).attr("id")
                };

                $.ajax({
                    url: '@Url.Action("ServicioEdit", "Catalog")',
                    async: false,
                    type: 'POST',
                    cache: false,
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(model),
                    success: function (result) {
                        $.notify({ icon: "fa fa-info-circle", message: 'Datos Cargados para edicion' }, { type: 'info' });
                        $('.onlyNumber').keyup(function () {
                            this.value = this.value.replace(/[^0-9\.]/g, '');
                        });
                        $("#divEditionServicio").html(result);
                    }
                });
            });

            $(".clsDeleteServicio").on('click', function (e) {
                var model = {
                    "idServicioSelected": $(this).attr("id")
                };
                var item = $(this).closest("tr");
                $.ajax({
                    url: '@Url.Action("DeleteServicio", "Catalog")',
                    async: false,
                    type: 'POST',
                    cache: false,
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(model),
                    success: function (result) {
                        if (result.success == true) {
                            item.remove();
                            $("#divEditionServicio").html("<div class='border-b push-30'><h2 class='push-10'><span class='h5 font-w400 text-muted'>Selecciona un item para la edicion</span></h2></div> ");
                            $.notify({ icon: "fa fa-check", message: 'Eliminacion Correcta' }, { type: 'success' });
                        } else {
                            $.notify({ icon: "fa fa-info-circle", message: 'Error Localizado: Observar la seccion de Edicion' }, { type: 'info' });
                            $("#divEditionServicio").html(result.responseText);
                        }
                    }
                });
            });
        });

        function validateEditServicio() {
            $("#formEditServicio").validate({
                wrapper: 'span',
                errorPlacement: function (error, element) {
                    error.css({ 'padding-left': '10px', 'margin-right': '20px', 'padding-bottom': '2px' });
                    error.addClass("arrow")
                    error.insertAfter(element);
                },
                rules: {

                },
                messages: {

                }
            });
            var band = $('#formEditServicio').validate().form();

            return band;
        }


        function validateCreateServicio() {
            $("#formCreateServicio").validate({
                wrapper: 'span',
                errorPlacement: function (error, element) {
                    error.css({ 'padding-left': '10px', 'margin-right': '20px', 'padding-bottom': '2px' });
                    error.addClass("arrow")
                    error.insertAfter(element);
                },
                rules: {

                },
                messages: {

                }
            });
            var band = $('#formCreateServicio').validate().form();

            return band;
        }
    </script>
}
@model GrupoThera.Entities.Models.Catalog.CatalogModel
@{
    ViewBag.Title = "ClienteView";
    var allItems = Model.AllCliente.Count;
}

<!-- Page Header -->
<div class="content bg-gray-lighter">
    <div class="row items-push">
        <div class="col-sm-7">
            <h1 class="page-heading">
                Catalogo Cliente <small>Creacion / Edicion / Eliminacion</small>
            </h1>
        </div>
    </div>
</div>
<!-- END Page Header -->
<!-- Page Content -->
<div class="content">
    <div class="block">
        <ul class="nav nav-tabs" data-toggle="tabs">
            <li class="active">
                <a href="#catalog-new">Nuevo</a>
            </li>
            <li>
                <a href="#catalog-list">Listado</a>
            </li>
            <li>
                <a href="#catalog-edit">Edicion</a>
            </li>
        </ul>
        <div class="block-content tab-content bg-white">
            <!-- Nuevo -->
            <div class="tab-pane fade fade-up in active" id="catalog-new">                
                <!-- New Item -->
                    @using (Html.BeginForm("CreateCliente", "Catalog", FormMethod.Post, new { id = "formCreateCliente", enctype = "multipart/form-data", @class = "form-horizontal row-border grid-form", onsubmit = "return validateCreateCliente()" }))
                    {
                        <fieldset>
                            <legend>Creacion Nuevo Item</legend>
                            <div data-row-span="5">
                                <div data-field-span="4">
                                    <label>Razon Social</label>
                                    @Html.TextBoxFor(model => model.Cliente.razonSocial, new { id = "razonSocial", name = "razonSocial", @class = "form-control required", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>RFC</label>
                                    @Html.TextBoxFor(model => model.Cliente.rfc, new { id = "rfc", name = "rfc", @class = "form-control required", type = "text" })
                                </div>
                            </div>
                            <div data-row-span="4">
                                <div data-field-span="2">
                                    <label>Direccion</label>
                                    @Html.TextBoxFor(model => model.Cliente.direccion, new { id = "direccion", name = "direccion", @class = "form-control required", type = "text" })
                                </div>
                                <div data-field-span="2">
                                    <label>Direccion Servicio</label>
                                    @Html.TextBoxFor(model => model.Cliente.dirServicio, new { id = "dirServicio", name = "dirServicio", @class = "form-control required", type = "text" })
                                </div>
                            </div>
                            <div data-row-span="5">
                                <div data-field-span="1">
                                    <label>Contacto</label>
                                    @Html.TextBoxFor(model => model.Cliente.contacto, new { id = "contacto", name = "contacto", @class = "form-control required", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Contacto Cargo</label>
                                    @Html.TextBoxFor(model => model.Cliente.contactoCargo, new { id = "contactoCargo", name = "contactoCargo", @class = "form-control required", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Estado</label>
                                    @Html.DropDownListFor(model => model.Cliente.estadoId, Model.listEstado, new { @class = "form-control required" })
                                </div>
                                <div data-field-span="1">
                                    <label>Ciudad</label>
                                    @Html.DropDownListFor(model => model.Cliente.ciudadId, Model.listCiudad, new { @class = "form-control required" })
                                </div>
                                <div data-field-span="1">
                                    <label>Giro</label>
                                    @Html.DropDownListFor(model => model.Cliente.giroId, Model.listGiro, new { @class = "form-control required" })
                                </div>
                            </div>
                            <div data-row-span="5">
                                <div data-field-span="1">
                                    <label>Telefono</label>
                                    @Html.TextBoxFor(model => model.Cliente.telefono, new { id = "telefono", name = "telefono", @class = "form-control required", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Fax</label>
                                    @Html.TextBoxFor(model => model.Cliente.fax, new { id = "fax", name = "fax", @class = "form-control", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Email</label>
                                    @Html.TextBoxFor(model => model.Cliente.email, new { id = "email", name = "email", @class = "form-control required", type = "text" })
                                </div>
                                <div data-field-span="2">
                                    <label>Comentarios</label>
                                    @Html.TextBoxFor(model => model.Cliente.comentarios, new { id = "comentarios", name = "comentarios", @class = "form-control", type = "text" })
                                </div>
                            </div>
                            <div data-row-span="5">
                                <div data-field-span="1">
                                    <label>Contacto2</label>
                                    @Html.TextBoxFor(model => model.Cliente.contacto2, new { id = "contacto2", name = "contacto2", @class = "form-control", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Contacto3</label>
                                    @Html.TextBoxFor(model => model.Cliente.contacto3, new { id = "contacto3", name = "contacto3", @class = "form-control", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Contacto4</label>
                                    @Html.TextBoxFor(model => model.Cliente.contacto4, new { id = "contacto4", name = "contacto4", @class = "form-control", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Contacto5</label>
                                    @Html.TextBoxFor(model => model.Cliente.contacto5, new { id = "contacto5", name = "contacto5", @class = "form-control", type = "text" })
                                </div>
                                <div data-field-span="1">
                                    <label>Contacto6</label>
                                    @Html.TextBoxFor(model => model.Cliente.contacto6, new { id = "contacto6", name = "contacto6", @class = "form-control", type = "text" })
                                </div>
                            </div>
                            <div data-row-span="5">
                                <div data-field-span="2">
                                    <label>Telefono2</label>
                                    @Html.TextBoxFor(model => model.Cliente.telefono2, new { id = "telefono2", name = "telefono2", @class = "form-control", type = "text" })
                                </div>
                            </div>
                        </fieldset>

                        <br /><br />
                        <div class="clearfix pt-md">
                            <div class="pull-right">
                                <button class="btn-primary btn">Crear Nueva Cliente</button>
                            </div>
                        </div>
                    }
                </div>
            <!-- END Nuevo -->
            
            <!-- Listado -->
            <div class="tab-pane fade fade-up" id="catalog-list">
                <div class="border-b push-30">
                    <h2 class="push-10">@allItems <span class="h5 font-w400 text-muted">Items Encontrados</span></h2>
                </div>
                <table class="table table-striped table-vcenter">
                    <thead>
                        <tr>
                            <th>Razon Social</th>
                            <th>RFC</th>
                            <th>Giro</th>
                            <th class="text-center" style="width: 5%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AllCliente)
                        {
                            <tr>
                                <td class="">@Html.DisplayFor(modelItem => item.razonSocial)</td>
                                <td class="">@Html.DisplayFor(modelItem => item.rfc)</td>
                                <td class="">@Html.DisplayFor(modelItem => item.Giro.descripcion)</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a id="@Html.DisplayFor(modelItem => item.clienteId)" class="btn btn-xs btn-default clsEditCliente" type="button"  title="Edicion"><i class="fa fa-pencil"></i></a>
                                        <a id="@Html.DisplayFor(modelItem => item.clienteId)" class="btn btn-xs btn-default clsDeleteCliente" type="button"  title="Eliminar"><i class="fa fa-times"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- END Listado -->

            <!-- Edicion -->
            <div class="tab-pane fade fade-up" id="catalog-edit">                
                <div class="col-md-12" id="divEditionCliente">
                    <div class="border-b push-30">
                        <h2 class="push-10"><span class="h5 font-w400 text-muted">Selecciona un item para la edicion</span></h2>
                    </div> 
                </div>
            </div>
            <!-- END Edicion -->
        </div>
    </div>
</div>

@section Scripts {

    <script src="@Url.Content("~/Content/plugins/jquery-validation/dist/jquery.js")"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-validation/dist/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Content/plugins/jquery-validation/dist/additional-methods.min.js")"></script>

    <script>

        $(document).ready(function () {

            $.notify({ icon: "fa fa-info-circle", message: 'Datos Cargados Correctamente' }, { type: 'info' });

            $(".clsEditCliente").on('click', function (e) {

                var model = {
                    "idClienteSelected": $(this).attr("id")
                };

                $.ajax({
                    url: '@Url.Action("ClienteEdit", "Catalog")',
                    async: false,
                    type: 'POST',
                    cache: false,
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(model),
                    success: function (result) {
                        $.notify({ icon: "fa fa-info-circle", message: 'Datos Cargados para edicion' }, { type: 'info' });
                        $("#divEditionCliente").html(result);
                    }
                });
            });

            $(".clsDeleteCliente").on('click', function (e) {
                var model = {
                    "idClienteSelected": $(this).attr("id")
                };
                var item = $(this).closest("tr");
                $.ajax({
                    url: '@Url.Action("DeleteCliente", "Catalog")',
                    async: false,
                    type: 'POST',
                    cache: false,
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(model),
                    success: function (result) {
                        if (result.success == true) {
                            item.remove();
                            $("#divEditionCliente").html("<div class='border-b push-30'><h2 class='push-10'><span class='h5 font-w400 text-muted'>Selecciona un item para la edicion</span></h2></div> ");
                            $.notify({ icon: "fa fa-check", message: 'Eliminacion Correcta' }, { type: 'success' });
                        } else {
                            $.notify({ icon: "fa fa-info-circle", message: 'Error Localizado: Observar la seccion de Edicion' }, { type: 'info' });
                            $("#divEditionCliente").html(result.responseText);
                        }
                    }
                });
            });
        });

        function validateEditCliente() {
            $("#formEditCliente").validate({
                wrapper: 'span',
                errorPlacement: function (error, element) {
                    error.css({ 'padding-left': '10px', 'margin-right': '20px', 'padding-bottom': '2px' });
                    error.addClass("arrow")
                    error.insertAfter(element);
                },
                rules: {

                },
                messages: {

                }
            });
            var band = $('#formEditCliente').validate().form();

            return band;
        }


        function validateCreateCliente() {
            $("#formCreateCliente").validate({
                wrapper: 'span',
                errorPlacement: function (error, element) {
                    error.css({ 'padding-left': '10px', 'margin-right': '20px', 'padding-bottom': '2px' });
                    error.addClass("arrow")
                    error.insertAfter(element);
                },
                rules: {

                },
                messages: {

                }
            });
            var band = $('#formCreateCliente').validate().form();

            return band;
        }
    </script>
}
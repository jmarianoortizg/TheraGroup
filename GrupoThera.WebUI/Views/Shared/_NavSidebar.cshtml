@model GrupoThera.Entities.Models.General.DashboardModel
@{
    ViewBag.Title = "_NavSidebar";
}

<nav id="sidebar" class="bg-thera" >
    <!-- Sidebar Scroll Container -->
    <div id="sidebar-scroll" >
        <!-- Sidebar Content -->
        <!-- Adding .sidebar-mini-hide to an element will hide it when the sidebar is in mini mode -->
        <div class="sidebar-content">
            <!-- Side Header -->
            <div class="side-header side-content bg-white-op ">
                <!-- Layout API, functionality initialized in App() -> uiLayoutApi() -->
                <button class="btn btn-link text-gray pull-right hidden-md hidden-lg" type="button" data-toggle="layout" data-action="sidebar_close">
                    <i class="fa fa-times"></i>
                </button> 
                <a class="h5 text-white" href="index.html">
                   <img src="~/Content/assets/img/logo/logoBackend.jpg" style="width:60%" />
                   @*<i class="fa fa-circle-o-notch text-primary"></i> <span class="h4 font-w600 sidebar-mini-hide">Grupo Thera</span>*@
                </a>
            </div>
            <!-- END Side Header -->
            <!-- Side Content -->
            <div class="side-content side-content-full bg-thera">
                @Html.Partial("_Menu", Model)
            </div>
            <!-- END Side Content -->
        </div>
        <!-- Sidebar Content -->
    </div>
    <!-- END Sidebar Scroll Container -->
</nav>


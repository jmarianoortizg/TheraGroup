@model GrupoThera.Entities.Models.AreaTecnica.ATOSModel
@{
    ViewBag.Title = "OSActions";
}

@if (!Model.ordenServicio.StatusOrdenServicio.codigo.Equals("ABIERTA"))
{
    <br /><br />
    <h3 style="margin-left:5%"> [ No es Posible cancelar esta Orden de Servicio ya que no esta abierta ]</h3>
    <br /><br />
}
else
{
    <div class="form-horizontal push-10-t push-10">
        <div class="form-group">
            <div class="col-xs-12">
                <div class="form-material">
                    <textarea class="form-control" id="lab-msg" name="lab-msg" rows="7"></textarea>
                    <label for="contact2-msg">Mensaje</label>
                </div>
                <div class="help-block text-right">Para cualquier rechazo se debera de realizar un comentario</div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2">
                <button class="btn btn-sm btn-danger statusOServicio" type="button" id="CANCEL"><i class="si si-action-undo push-5-r"></i> Cancelar x Ventas</button>
            </div>
        </div>
    </div>
}